@page
@model InventoryManager.Pages.Labs.PracticeProblemBModel
@{
}

@{
    <p>Choose two numbers to display the range of values between them:</p>
    <form asp-page="PracticeProblemB" asp-page-handler="PopulateHandler">
        <input asp-for="FirstNum" placeholder="Please enter a number: " />
        <span asp-validation-for="FirstNum" class="text-danger"></span>
        <br />
        <input asp-for="SecondNum" placeholder="Please enter a number: " />
        <span asp-validation-for="SecondNum" class="text-danger"></span>
        <br />
        <input type="submit" value="Display Sequence" />
    </form>

    
    <form asp-page-handler="PopulateHandler" method="post">
        <br />
        <p>Choose two numbers between these preselected listed values to display the range of values between them:</p>
        <select asp-for="FirstNum" class="form-select">
            <option selected>0</option>
            <option value="10">10</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
        <br />
        <select asp-for="SecondNum" class="form-select">
            <option value="0">0</option>
            <option value="10">10</option>
            <option value="50">50</option>
            <option value="100" selected>100</option>
        </select>
        <br />
        <button class="btn btn-primary">Display Sequence (Single Select)</button>
        <br />
    </form>
    
    <p>The values between @Model.FirstNum and @Model.SecondNum is: </p>

    if(@Model.NumArray != null)
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Values between @Model.FirstNum and @Model.SecondNum</th>
                </tr>
            </thead>
            <tbody>
                  @for(int i = 0; i < Model.NumArray.Length; i++)
                  {
                    <tr><td>@Model.NumArray[i]</td></tr>
                  }
            </tbody>
        </table>
    }
}